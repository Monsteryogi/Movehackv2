<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/ic_baseline_my_location"
                android:layout_marginRight="14dp"
                android:layout_gravity="center"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:layout_gravity="center"
                android:textColorHint="@color/fontgrey"
                android:fontFamily="@font/product_sans_regular"
                android:backgroundTint="@color/fontgrey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_baseline_not_listed_location"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:layout_gravity="center"
                android:textColorHint="@color/fontgrey"
                android:fontFamily="@font/product_sans_regular"
                android:backgroundTint="@color/fontgrey"/>

        </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

        <Button
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/ic_baseline_swap_vertical_circle"/>

        </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/results_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    </LinearLayout>

</FrameLayout>